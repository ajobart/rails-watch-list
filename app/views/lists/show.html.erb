<% require "open-uri"
%>

<div class="main-show">
  <div class="show-title">
    <h2><%= @list.name %></h2>
  </div>
  <div class="show-btn-list">
    <%= link_to "Add a movie",  new_list_bookmark_path(@list), class:"btn btn-primary show-add-btn"%>
    <%= link_to 'Homepage', lists_path, class:"btn btn-primary home-btn"%>
    <%= link_to "Delete this list",
                list_path,
                method: :delete,
                data: { confirm: "Are you sure?" }, class:"btn btn-primary delete" %>
  </div>

  <div class="show-bookmark-container">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="show-bookmark-card">
      <div class="card-poster">
        <%= image_tag "#{bookmark.movie.poster_url}"%>
      </div>
      <div class="card-title">
        <%= bookmark.movie.title %>
      </div>
      <div class="card-comment">
        <%= bookmark.comment %>
      </div>
      <%= link_to "Delete",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure to delete this bookmark ?" }, class:"btn btn-primary" %>
    </div>

    <% end %>
  </div>
</div>
